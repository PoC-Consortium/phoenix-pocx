{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "default",
  "description": "Default capabilities for Phoenix PoCX Wallet - all platforms",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "opener:allow-reveal-item-in-dir",
    "opener:allow-open-path",
    "dialog:default",
    "notification:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://127.0.0.1:*" },
        { "url": "http://localhost:*" },
        { "url": "https://github.com/*" }
      ]
    }
  ]
}
