{
  "name": "phoenix-pocx",
  "version": "2.0.0-rc1",
  "author": {
    "name": "The Proof of Capacity Consortium",
    "email": "development@pocx.io"
  },
  "homepage": "https://pocx.io",
  "productName": "Phoenix PoCX Wallet",
  "description": "The Bitcoin-PoCX desktop wallet",
  "update": {
    "repositoryRootUrl": "https://api.github.com/repos/PoC-Consortium/phoenix",
    "checkIntervalMins": 10,
    "tagPrefix": "desktop-"
  },
  "keywords": [
    "bitcoin-pocx",
    "pocx",
    "wallet",
    "proof-of-capacity"
  ],
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/PoC-Consortium/phoenix"
  },
  "license": "GPL-3.0",
  "scripts": {
    "start": "electron .",
    "start:dev": "cross-env NODE_ENV=develop electron .",
    "start:fast": "cross-env DEVTOOLS=true electron .",
    "build": "node scripts/build.js",
    "pack": "electron-builder -p never",
    "release:win": "electron-builder -w",
    "release:mac": "electron-builder -m",
    "release:linux": "electron-builder -l"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "fs-extra": "^11.2.0",
    "semver": "^7.6.0",
    "winston": "^3.17.0"
  },
  "build": {
    "appId": "org.pocx.phoenix",
    "productName": "Phoenix PoCX Wallet",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons"
    }
  }
}
